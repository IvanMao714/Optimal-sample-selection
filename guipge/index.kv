<IndexPage>:
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            pos: self.pos
            size: self.size


    Image:
        pos_hint: {"center_x":0.5,"y":0.35}
        source: './static/logo.png'
        # size: 200,200

    Label:
        text: '[b]Optimal Sample Selection[/b]'
        color: kivy.utils.get_color_from_hex('#0081CF')
        font_size: 24  #18
        pos_hint: {"center_x":0.5,"y":0.2}
        markup: True

    Label:
        text: '[b]v.4.2.1[/b]'
        color: kivy.utils.get_color_from_hex('#0081CF')
        font_size: 18  #18
        pos_hint: {"center_x":0.5,"y":0.15}
        markup: True

    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,.2)
        spacing: 50
        padding: 100,0
        pos_hint: {"center_x":0.5,"y":0.2}

        Button:
            text: "[b]Select[/b]"
            markup: True
            on_press:root.page_select()

        Button:
            text: "[b]Database[/b]"
            markup: True
            on_release: root.page_database()
