<DatabasePage>:
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            pos: self.pos
            size: self.size
            source: './static/index.jpg'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.8,0.05)
        pos_hint: {"center_x":0.5,"y":0.8}
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "m:"
                font_size: 15
                color: [0,0,0,1]
                size_hint: (0.5,1)
            TextInput:
                size_hint: (0.5,1)
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "n:"
                font_size: 15
                color: [0,0,0,1]
                size_hint: (0.5,1)
            TextInput:
                size_hint: (0.5,1)
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                size_hint: (0.5,1)
                text: "k:"
                font_size: 15
                color: [0,0,0,1]
            TextInput:
                size_hint: (0.5,1)

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.8,0.05)
        pos_hint: {"center_x":0.5,"y":0.725}
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "j:"
                font_size: 15
                color: [0,0,0,1]
                size_hint: (0.5,1)
            TextInput:
                size_hint: (0.5,1)
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "s:"
                font_size: 15
                color: [0,0,0,1]
                size_hint: (0.5,1)
            TextInput:
                size_hint: (0.5,1)
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                size_hint: (0.5,1)
                text: "times:"
                font_size: 15
                color: [0,0,0,1]
            TextInput:
                size_hint: (0.5,1)

    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.8,.1)
        pos_hint: {"center_x":0.5,"y":0.6}
        BoxLayout:
            Button:
                text: "[b]Display Database Data[/b]"
                markup: True
                on_release: root.page_index()
            Button:
                text: "[b]Delete Database Data[/b]"
                markup: True
                on_release: root.page_select()
        Button:
            text: "[b]Download Database File[/b]"
            markup: True
            on_release: root.page_select()


    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        pos_hint: {"center_x":0.5,"y":0.2}
        size_hint: (0.8,.35)
        TextInput:
            id: text_input
            # text: root.text
            multiline: True
            readonly: True

    Button:
        size_hint: (0.8,.05)
        pos_hint: {"center_x":0.5,"y":0.1}
        text: "[b]Back to Index[/b]"
        markup: True
        on_release: root.page_index()
    Button:
        size_hint: (0.8,.05)
        pos_hint: {"center_x":0.5,"y":0.04}
        text: "[b]Back to Select[/b]"
        markup: True
        on_release: root.page_select()